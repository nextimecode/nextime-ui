{
  "extends": "./react.json",
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "incremental": true,
    "lib": ["dom", "esnext"]
  },
  "plugins": [
    {
      "name": "next"
    }
  ],
  "paths": {
    "@/*": ["./src/*"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"]
}
